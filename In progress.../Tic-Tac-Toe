using namespace std;

int position;

void pos()
{
    cout << "\nEnter the position : ";
    cin >> position;
}

void chal();

int main()
{
    cout << "\t\t\t\t\tWelcome to TIC-TAC-TOE !";
    cout << "\n\n\n";

    cout << R"(
         |        |                                  
         |        |        
  _______|________|________ 
         |        |          
         |        |
  _______|________|________
         |        |
         |        |
         |        |
 
 
         |        |                                                   
     1   |   2    |   3                                             
  _______|________|________                                             
         |        |                                                                            
     4   |   5    |   6          <----- Refrence for positions :                                                
  _______|________|________                                                          
         |        |                                                           
     7   |   8    |    9                                                        
         |        |                                                                     
)";
    int choice = 99;
    while (choice)
    {
        pos();

        if (position <= 9 && position >= 1)
        {
            cout << "\nVALID !";

            this_thread::sleep_for(chrono::seconds(2));
            for (int i = 0; i < 7; i++)
            {
                cout << "\b \b";
            }
          
            this_thread::sleep_for(chrono::seconds(2));
           
            chal();
        }
        else
        {
            cout << "\nINVALID NUMBER !!";
            cout << "\tEnter agin !\n";
            pos();
        }

        cout << "\n\nDo you wish to continue ? ";
        cin >> choice;
    }
    return 0;
}



