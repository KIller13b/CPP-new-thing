#include<iostream>
#include<vector>
#include<conio.h>

using namespace std;


int main()
{
	int i, x, allocate, y;
	vector<string> acc_holder_name;
	vector<int> acc_number;
	vector<float> initial_balance;
	int choice;
	while (true)
	{
		cout << "***BANK MANAGEMENT SYSTEM***";
		cout << "\n\n1. Add account";
		cout << "\n2. Display account";
		cout << "\n3. Deposit money";
		cout << "\n4. Withdraw money";
		cout << "\n5. Exit";
		cout << "\n\nEnter your choice : ";
		cin >> choice;

		if (choice == 1)
		{
			string name;
			cout << "\n\nEnter the account holder name : ";
			cin >> name;
			acc_holder_name.push_back(name);
			int number;
			cout << "Enter account number : ";
			cin >> number;
			acc_number.push_back(number);
			int balance;
			cout << "Enter intial balance : ";
			cin >> balance;
			initial_balance.push_back(balance);
			cout << "\n\nAccount created successfully !\n\n";
			cout << "-------------------------------------------\n\n";
		}

		else if (choice == 2)
		{
			bool yo = false;
			cout << "\n\nEnter your account number : ";
			int a;
			cin >> a;
			for (i = 0; i < size(acc_number); i++)
			{
				if (a == acc_number[i])
				{
					cout << "\nAccount Found !!";
					yo = false;
					break;
				}
				else
				{
					yo = true;
				}
			}
			if (yo)
			{
				cout << "\nAccount not Found *_*";
				cout << "\n\n-------------------------------------------\n\n";
			}
			if (yo == false)
			{
				cout << "\nDISPLAYING......\n\n";
				cout << "Account Holder name : " << acc_holder_name[i] << "\n";
				cout << "            Balance : $" << initial_balance[i] ;
				cout << "\n\n-------------------------------------------\n\n";
			}
		}

		else if (choice == 5)
		{
			cout << "\nThank You !";
			cout << "\n\nEXITING.......";
			break;
		}

		else if (choice == 3)   
		{
			int b;
			bool to = false;
			cout << "\n\nEnter account number : ";
			cin >> b;
			for (x = 0; x < size(acc_number); x++)
			{
				if (b == acc_number[x])
				{
					cout << "\n\nAccount Found !!\n";
					to = false;
					break;
				}
				else
				{
					to = true;
				}
			}
			if (to)
			{
				cout << "\nAccount not Found *_*\n";
				cout << "\n\n-------------------------------------------\n\n";
			}
			if (to == false)
			{
				float enter;
				cout << "\n\nEnter the amount : ";
				cin >> enter;
				cout << "\nLoading.......";
				cout << "\n\nDeposting money amount of $" << enter << " to account number \"" << b << "\".....";
				initial_balance[x] = initial_balance[x] + enter;
				cout << "\n\t\tDeposition Successfull !!";
				cout << "\n\n-------------------------------------------\n\n";
			}
		}

		else if (choice == 4)  
		{
			int c;
			bool we = false;
			cout << "\n\nEnter the account number : ";
			cin >> c;
			for (y = 0; y < size(acc_number); y++)
			{
				if (c == acc_number[y])
				{
					cout << "\n\nAccount Found !!\n";
					we = false;
					break;
				}
				else
				{
					we = false;
				}
			}
			if (we)
			{
				cout << "\nAccount not Found *_*\n";
				cout << "\n\n-------------------------------------------\n\n";
			}
			if (we == false)
			{
				float entere;
				cout << "\n\nEnter the amount : ";
				cin >> entere;
				cout << "\nLoading.......";
				cout << "\n\nWithdrawing money amount of $" << entere << " to account number \"" << c << "\".....";
				initial_balance[y] = initial_balance[y] - entere;
				cout << "\n\t\tWithdrawn Successfull !!";
				cout << "\n\n-------------------------------------------\n\n";
			}
		}
		else
		{
			cout << "\n\n\t\t\t\tERROR *_*";
			cout << "\n\nPlease try again.........\n";
			cout << "\n\n-------------------------------------------\n\n";
			}
	}
	return 0;
}